@model Homework_13.Models.Note

@{
    ViewData["Title"] = "Delete Note";
}

<h1>Delete Note</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this note?</h4>

    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>@Html.DisplayFor(model => model.Title)</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Text)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Text)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>

            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tags)</dt>
                <dd class="col-sm-10">
                    @foreach (var tag in Model.Tags.Split(','))
                    {
                        <span class="badge bg-secondary me-1">@tag.Trim()</span>
                    }
                </dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>

    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>